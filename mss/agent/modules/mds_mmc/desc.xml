<module id="mds_mmc">
    <name>MDS main components</name>
    <desc>MMC web interface and OpenLDAP directory</desc>
    <packages>
        <target name="all">
            <rpm>mmc-web-base</rpm>
            <rpm>mmc-web-ppolicy</rpm>
            <rpm>python-mmc-base</rpm>
            <rpm>python-mmc-ppolicy</rpm>
            <rpm>mmc-agent</rpm>
            <rpm>openldap-servers</rpm>
            <rpm>nss_ldap</rpm>
	        <rpm>openldap-clients</rpm>
            <rpm>pam_ldap</rpm>
            <rpm>openldap-mandriva-dit</rpm>
        </target>
    </packages>
    <config>
        <text name="mdsdomain" require="yes" default="example.com" validation="fqdn">
            <label>MDS domain name</label>
            <help>Usually the domain name (eg: domain.com) managed with MDS. This define the LDAP root.</help>
        </text>
        <password name="mdspasswd" require="yes">
            <label>MDS password</label>
            <help>The MDS admin password.</help>
        </password>
        <check name="mdsppolicy" default="on">
            <label>Password policy</label>
            <help>Enable password policy on MDS (password age, expiration, history, lock-out...)</help>
        </check>
    </config>
    <text>Error at generating password</text>
    <text>Password successfully generated</text>
    <text>OpenLDAP configuration file was generated with errors.</text>
    <text>Aborting. File used was</text>
    <text>OpenLDAP configuration file successfully generated.</text>
    <text>Database loading failed during test run.</text>
    <text>Ldif file used:</text>
    <text>slapd.conf file used:</text>
    <text>Database loading test successfull.</text>
    <text>Service</text>
    <text>stopped succesfully.</text>
    <text>fails stopping. Check</text>
    <text>Writing</text>
    <text>and</text>
    <text>Loading database...</text>
    <text>Database loaded successfully.</text>
    <text>Your previous database directory has been backed up as</text>
    <text>started succesfully.</text>
    <text>fails starting. Check</text>
    <text>Mandriva Directory Server is running.</text>
    <text>You can log in the MDS interface from http://@HOSTNAME@/mmc/.</text>
    <text>MDS administrator : root</text>
</module>
