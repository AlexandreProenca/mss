<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="module" type="moduleComplexType">
    </xs:element>
    <xs:element name="packages" type="packagesComplexType">
    </xs:element>
    <xs:element name="target" type="targetComplexType">
    </xs:element>
    <xs:element name="conflicts" type="conflictsComplexType">
    </xs:element>
    <xs:element name="config" type="configComplexType">
    </xs:element>
    <xs:complexType name="configComplexType">
        <xs:sequence>
            <xs:choice maxOccurs="unbounded" minOccurs="1">
                <xs:element name="text">
                    <xs:complexType>
                        <xs:complexContent>
                            <xs:extension base="fieldBaseComplexType">
                                <xs:attribute name="validation" type="xs:string" use="optional"></xs:attribute>
                                <xs:attribute name="edit" type="xs:string" use="optional"></xs:attribute>
                                <xs:attribute name="multi">
                                    <xs:simpleType>
                                        <xs:restriction base="xs:string">
                                            <xs:enumeration value="yes"></xs:enumeration>
                                            <xs:enumeration value="no"></xs:enumeration>
                                        </xs:restriction>
                                    </xs:simpleType>
                                </xs:attribute>
                                <xs:attribute name="edit_if_unconfigured" use="optional">
                                    <xs:simpleType>
                                        <xs:restriction base="xs:string">
                                            <xs:enumeration value="Yes"></xs:enumeration>
                                            <xs:enumeration value="no"></xs:enumeration>
                                        </xs:restriction>
                                    </xs:simpleType>
                                </xs:attribute>
                                <xs:attribute name="size" type="xs:int"></xs:attribute>
                                <xs:attribute name="store" use="optional">
                                    <xs:simpleType>
                                        <xs:restriction base="xs:string">
                                            <xs:enumeration value="yes"></xs:enumeration>
                                            <xs:enumeration value="no"></xs:enumeration>
                                        </xs:restriction>
                                    </xs:simpleType>
                                </xs:attribute>
                            </xs:extension>
                        </xs:complexContent>
                    </xs:complexType>
                </xs:element>
                <xs:element name="options">
                    <xs:complexType>
                        <xs:complexContent>
                            <xs:extension base="fieldBaseComplexType">
                                <xs:sequence>
                                    <xs:element name="option" maxOccurs="unbounded" minOccurs="2">
                                        <xs:complexType>
                                            <xs:simpleContent>
                                                <xs:extension base="xs:string">
                                                    <xs:attribute name="value" type="xs:string" use="required"></xs:attribute>
                                                </xs:extension>
                                            </xs:simpleContent>
                                        </xs:complexType>
                                    </xs:element>
                                </xs:sequence>
                            </xs:extension>
                        </xs:complexContent>
                    </xs:complexType>
                </xs:element>
                <xs:element name="password">
                    <xs:complexType>
                        <xs:complexContent>
                            <xs:extension base="fieldBaseComplexType">
                                <xs:attribute name="show_if_unconfigured" use="optional">
                                    <xs:simpleType>
                                        <xs:restriction base="xs:string">
                                            <xs:enumeration value="yes"></xs:enumeration>
                                            <xs:enumeration value="no"></xs:enumeration>
                                        </xs:restriction>
                                    </xs:simpleType>
                                </xs:attribute>
                            </xs:extension>
                        </xs:complexContent>
                    </xs:complexType>
                </xs:element>
                <xs:element name="check">
                    <xs:complexType>
                        <xs:complexContent>
                            <xs:extension base="fieldBaseComplexType"></xs:extension>
                        </xs:complexContent>
                    </xs:complexType>
                </xs:element>
                <xs:element name="network">
                    <xs:complexType>
                        <xs:complexContent>
                            <xs:extension base="fieldBaseComplexType">
                                <xs:attribute name="format" use="required">
                                    <xs:simpleType>
                                        <xs:restriction base="xs:string">
                                            <xs:enumeration value="short"></xs:enumeration>
                                            <xs:enumeration value="long"></xs:enumeration>
                                        </xs:restriction>
                                    </xs:simpleType>
                                </xs:attribute>
                                <xs:attribute name="validation" type="xs:string" use="optional"></xs:attribute>
                            </xs:extension>
                        </xs:complexContent>
                    </xs:complexType>
                </xs:element>
                <xs:element name="custom">
                    <xs:complexType>
                        <xs:attribute name="name" type="xs:string"></xs:attribute>
                    </xs:complexType>
                </xs:element>
            </xs:choice>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="moduleComplexType">
        <xs:sequence>
            <xs:choice maxOccurs="unbounded" minOccurs="1">
                <xs:element minOccurs="1" name="name" type="xs:string"></xs:element>
                <xs:element minOccurs="1" name="desc" type="xs:string"></xs:element>
                <xs:element minOccurs="0" maxOccurs="1" name="actions" type="actionsComplexType"></xs:element>
                <xs:element name="market">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="info_file">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:string">
                                            <xs:attribute name="title" type="xs:string"></xs:attribute>
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType></xs:element>
                            <xs:element name="buy_url" type="xs:anyURI"></xs:element>
                        </xs:sequence>
                    </xs:complexType></xs:element>
                <xs:element name="medias" maxOccurs="1" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="url" type="xs:string"></xs:element>
                        </xs:sequence>
                        <xs:attribute name="verbose_name" type="xs:string" use="required"></xs:attribute>
                        <xs:attribute name="name" type="xs:string" use="required"></xs:attribute>
                        <xs:attribute name="proto" use="required">
                            <xs:simpleType>
                                <xs:restriction base="xs:string">
                                    <xs:enumeration value="http"></xs:enumeration>
                                    <xs:enumeration value="https"></xs:enumeration>
                                </xs:restriction>
                            </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="mode" default="none">
                            <xs:simpleType>
                                <xs:restriction base="xs:string">
                                    <xs:enumeration value="none"></xs:enumeration>
                                    <xs:enumeration value="distrib"></xs:enumeration>
                                    <xs:enumeration value="updates"></xs:enumeration>
                                </xs:restriction>
                            </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="auth" type="xs:string"></xs:attribute>
                    </xs:complexType>
                </xs:element>
                <xs:element minOccurs="0" ref="packages" maxOccurs="1"></xs:element>
                <xs:element name="postinstall" maxOccurs="1" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="reboot">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:enumeration value="yes"></xs:enumeration>
                                        <xs:enumeration value="no"></xs:enumeration>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element minOccurs="0" maxOccurs="1" name="deps" type="depsComplexType"></xs:element>
                <xs:element minOccurs="0" ref="conflicts"></xs:element>
                <xs:element minOccurs="0" maxOccurs="unbounded" ref="config"></xs:element>
                <xs:element minOccurs="0" maxOccurs="unbounded" name="text" type="xs:string"></xs:element>
            </xs:choice>
        </xs:sequence>
        <xs:attribute use="required" name="id" type="xs:string"></xs:attribute>
    </xs:complexType>
    <xs:complexType name="targetComplexType">
        <xs:sequence>
            <xs:element minOccurs="1" maxOccurs="unbounded" name="rpm" type="xs:string">
            </xs:element>
        </xs:sequence>
        <xs:attribute use="required" name="name">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="all"></xs:enumeration>
                    <xs:enumeration value="x86_64"></xs:enumeration>
                    <xs:enumeration value="i586"></xs:enumeration>
                    <xs:enumeration value="i686"></xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>
    <xs:complexType name="packagesComplexType">
        <xs:sequence>
            <xs:element minOccurs="1" ref="target" maxOccurs="unbounded"></xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="conflictsComplexType">
        <xs:sequence>
            <xs:element name="module" type="xs:string" maxOccurs="unbounded" minOccurs="1"></xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="fieldBaseComplexType">
        <xs:sequence>
            <xs:element minOccurs="1" name="label" type="xs:string">
            </xs:element>
            <xs:element minOccurs="0" name="help" type="xs:string">
            </xs:element>
        </xs:sequence>
        <xs:attribute use="required" name="name" type="xs:string"></xs:attribute>
        <xs:attribute use="optional" name="require">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="yes"></xs:enumeration>
                    <xs:enumeration value="no"></xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute use="optional" name="default" type="xs:string">
        </xs:attribute>
        <xs:attribute use="optional" name="show" type="xs:string"></xs:attribute>
    </xs:complexType>
    <xs:complexType name="actionsComplexType">
        <xs:sequence>
            <xs:element name="action" type="actionComplexType" maxOccurs="unbounded" minOccurs="1"></xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="actionComplexType">
        <xs:attribute name="type">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="link"></xs:enumeration>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="name" type="xs:string" use="required"></xs:attribute>
        <xs:attribute name="value" type="xs:anyURI" use="required"></xs:attribute>
    </xs:complexType>
    <xs:complexType name="depsComplexType">
        <xs:sequence>
            <xs:element name="module" type="xs:string" maxOccurs="unbounded" minOccurs="1"></xs:element>
        </xs:sequence>
    </xs:complexType>

</xs:schema>