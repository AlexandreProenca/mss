<?xml version="1.0" encoding="UTF-8"?>
<module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../desc.xsd" id="davical">
    <name>Calendar and Addressbook</name>
    <desc> DAViCal a server for calendar and addressbook sharing.</desc>
    <actions>
        <action type="link" name="Management interface" value="http://@HOSTNAME@/davical/admin.php"/>
    </actions>
    <packages>
        <target name="all">
            <rpm>davical</rpm>
            <!-- The following dependences should be inside the package. While the dependency is broken, let's install it manually -->
            <rpm>php-pdo_pgsql</rpm>
            <rpm>php-calendar</rpm>
            <rpm>php-ldap</rpm>
        </target>
    </packages>
    <deps>
<!--         <module>apache</module> -->
        <module>postgresql</module>
    </deps>
    <text>Something goes wrong with the database setup</text>
    <text>Check the logs</text>
    <text>The calendar and addressbook server is configured.</text>
    <text>The temporary admin password is </text>
    <text> (without the ' ')</text>
    <text>Remember to change it using the manadement interface </text>
</module>
