<module id="mds_webmail">
    <name>Webmail</name>
    <desc>Roundcube, a complete webmail solution for your mail service</desc>
    <actions>
        <action type="link" name="Management interface" value="https://@HOSTNAME@/mmc/main.php" />
        <action type="link" name="Webmail interface" value="https://@HOSTNAME@/roundcubemail/" />
    </actions>
    <packages>
        <target name="all">
            <rpm>roundcubemail</rpm>
            <rpm>sqlite-tools</rpm>
            <rpm>php-fileinfo</rpm>
            <rpm>php-mcrypt</rpm>
            <rpm>php-pear-MDB2_Driver_sqlite</rpm>
        </target>
    </packages>
    <deps>
        <module>mds_mail</module>
    </deps>
    <conflicts>
        <module>zarafa</module>
    </conflicts>
    <text>Webmail RoundCube is activated on your server.</text>
    <text>You can access the webmail interface at https://@HOSTNAME@/roundcubemail/</text>
</module>
