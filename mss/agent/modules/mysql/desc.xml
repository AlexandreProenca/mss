<?xml version="1.0" encoding="UTF-8"?>
<module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../desc.xsd" id="mysql">
    <name>MySQL database</name>
    <desc>MySQL relational database</desc>
    <packages>
        <target name="all">
            <rpm>mysql</rpm>
            <rpm>mysql-client</rpm>
        </target>
    </packages>
    <conflicts>
        <module>mysqlmax</module>
    </conflicts>
    <config>
        <password name="current_mypasswd" show="configured">
            <label>Current password</label>
            <help>Current MySQL root password.</help>
        </password>
        <password name="mypasswd" require="yes">
            <label>New password</label>
            <help>New MySQL root password. Set here the new password.</help>
        </password>
    </config>
</module>
