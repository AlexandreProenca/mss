<module id="openldap">
  <name>OpenLDAP</name>
  <desc>Open Source LDAP directory</desc>
  <packages>
    <target name="all">
      <rpm>openldap-servers</rpm>
      <rpm>nss_ldap</rpm>
      <rpm>openldap-clients</rpm>
      <rpm>pam_ldap</rpm>
      <rpm>openldap-mandriva-dit</rpm>
    </target>
  </packages>
  <config>
    <text name="dc" require="yes" default="example.com" validation="fqdn">
        <label>LDAP root</label>
        <help>Usually the domain name (eg: domain.com). This define the LDAP root.</help>
    </text>
    <password name="passwd" require="yes">
        <label>LDAP password</label>
        <help>The LDAP admin password.</help>
    </password>
  </config>
</module>
